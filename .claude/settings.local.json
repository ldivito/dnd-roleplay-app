{
  "permissions": {
    "allow": [
      "Bash(npx create-next-app:*)",
      "Bash(mkdir:*)",
      "Bash(npm install)",
      "Bash(npm run dev:*)",
      "Bash(gh auth:*)",
      "Bash(gh repo create:*)",
      "Bash(npm install:*)",
      "Bash(npx husky:*)",
      "Bash(npx husky add:*)",
      "Bash(npm run format:*)",
      "Bash(npm run build:*)",
      "Bash(git push:*)",
      "Bash(npx:*)",
      "Bash(git add:*)",
      "Bash(tput:*)",
      "Bash(pkill:*)",
      "Bash(true)",
      "Bash(rm:*)",
      "Bash(npm run lint)",
      "Bash(npm test)",
      "Bash(grep:*)",
      "Bash(npm run typecheck:*)"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline --visual-burn-rate emoji",
    "padding": 0
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cc-notifier/cc-notifier init"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cc-notifier/cc-notifier notify"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cc-notifier/cc-notifier notify"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cc-notifier/cc-notifier cleanup"
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory"
}
